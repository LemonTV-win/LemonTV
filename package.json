{
	"name": "lemontv",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:prod:push": "bun run db:prod:dump && drizzle-kit push",
		"db:prod:migrate": "drizzle-kit migrate",
		"db:prod:studio": "drizzle-kit studio",
		"db:prod:dump": "turso db shell lemon-tv .dump > dumps/prod-$(date -u +%Y-%m-%dT%H-%M-%SZ).sql",
		"db:dev:push": "drizzle-kit push --config drizzle-dev.config.ts",
		"db:dev:migrate": "drizzle-kit migrate --config drizzle-dev.config.ts",
		"db:dev:studio": "drizzle-kit studio --config drizzle-dev.config.ts",
		"i18n:check": "bun scripts/check-messages.ts",
		"knip": "knip",
		"changelog": "bun scripts/generate-changelog.ts",
		"jwt:generate": "bun scripts/generate-jwt-keys.ts",
		"test:e2e": "playwright test",
		"test": "npm run test:e2e"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.32.0",
		"@iconify/json": "^2.2.363",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.26.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.1.11",
		"@types/date-fns": "^2.6.3",
		"@types/gravatar": "^1.8.6",
		"@types/node": "^24.1.0",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"knip": "^5.62.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.37.1",
		"svelte-check": "^4.3.0",
		"tailwindcss": "^4.1.11",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"unplugin-icons": "^22.2.0",
		"vite": "^7.0.6"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.855.0",
		"@aws-sdk/s3-request-presigner": "^3.855.0",
		"@fontsource-variable/saira": "^5.2.8",
		"@infolektuell/noto-color-emoji": "^0.2.0",
		"@inlang/paraglide-js": "^2.2.0",
		"@libsql/client": "^0.15.10",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"chalk": "^5.4.1",
		"countries-list": "^3.1.1",
		"country-code-to-flag-emoji": "^2.0.0",
		"date-fns": "^4.1.0",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.4",
		"gravatar": "^1.8.2",
		"jose": "^6.0.12",
		"resend": "^4.7.0",
		"zod": "^4.0.13"
	}
}
